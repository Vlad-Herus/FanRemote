{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SaveAllFiles",
            "command": "${command:workbench.action.files.saveAll}",
            "type": "shell",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build Frontend",
            "dependsOn": "SaveAllFiles",
            "type": "shell",
            "command": "npm",
            "args": [
                "--prefix",
                "ClientApp",
                "run",
                "build"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "build Backend",
            "dependsOn": "SaveAllFiles",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "HttpService"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build All",
            "dependsOn": "build Frontend",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "HttpService"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run UI",
            "type": "shell",
            "dependsOn": "build Frontend",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "HttpService"
            ],
            "group": {
                "kind": "build",
            },
            "problemMatcher": "$msCompile"
        }
    ]
}